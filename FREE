-- ====================== NOTIFICATION ======================
local function Notify(msg)
    local n = Instance.new("Frame")
    n.Size = UDim2.new(0, 340, 0, 88)
    n.Position = UDim2.new(1, 30, 0, 45)
    n.BackgroundColor3 = Color3.fromRGB(16, 20, 44)
    n.Parent = screenGui
    Instance.new("UICorner", n).CornerRadius = UDim.new(0, 16)

    local s = Instance.new("UIStroke")
    s.Color = Color3.fromRGB(0, 240, 220)
    s.Thickness = 2.2
    s.Parent = n

    local t = Instance.new("TextLabel")
    t.Size = UDim2.new(1, -24, 1, -20)
    t.Position = UDim2.new(0, 12, 0, 10)
    t.BackgroundTransparency = 1
    t.Text = msg
    t.TextColor3 = Color3.fromRGB(220, 255, 255)
    t.TextSize = 16
    t.Font = Enum.Font.Gotham
    t.TextWrapped = true
    t.TextXAlignment = Enum.TextXAlignment.Left
    t.Parent = n

    TweenService:Create(n, TweenInfo.new(0.45), {Position = UDim2.new(1, -360, 0, 45)}):Play()
    task.delay(4.8, function()
        TweenService:Create(n, TweenInfo.new(0.5), {Position = UDim2.new(1, 30, 0, 45)}):Play()
        task.delay(0.6, function() n:Destroy() end)
    end)
end

-- Tab switch
local function setActiveTab(tab)
    if tab == "Info" then
        infoContent.Visible = true
        scriptsContent.Visible = false
        infoTabBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 255)
        infoTabBtn.TextColor3 = Color3.fromRGB(12, 12, 28)
        scriptsTabBtn.BackgroundColor3 = Color3.fromRGB(24, 24, 48)
        scriptsTabBtn.TextColor3 = Color3.fromRGB(175, 230, 255)
    else
        infoContent.Visible = false
        scriptsContent.Visible = true
        scriptsTabBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 255)
        scriptsTabBtn.TextColor3 = Color3.fromRGB(12, 12, 28)
        infoTabBtn.BackgroundColor3 = Color3.fromRGB(24, 24, 48)
        infoTabBtn.TextColor3 = Color3.fromRGB(175, 230, 255)
    end
end

infoTabBtn.MouseButton1Click:Connect(function() setActiveTab("Info") end)
scriptsTabBtn.MouseButton1Click:Connect(function() setActiveTab("Scripts") end)
setActiveTab("Scripts")

-- Draggable
local dragging, dragStart, startPos
titleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position
    end
end)
titleBar.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
end)
UserInputService.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

Notify("ZAPORIUM ready ‚Ä¢ ")
print("ZAPORIUM ‚Äì updated ")
