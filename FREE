}

local currentGameData = nil
for _, g in ipairs(games) do
    if g.placeId == currentPlaceId then
        currentGameData = g
        break
    end
end

local function createGameButton(data)
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, 0, 0, 66)
    frame.BackgroundColor3 = Color3.fromRGB(22, 22, 42)
    frame.Parent = scroll
    Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 16)

    local stroke = Instance.new("UIStroke")
    stroke.Color = Color3.fromRGB(50, 70, 115)
    stroke.Thickness = 1.4
    stroke.Parent = frame

    -- GREEN BORDER + GLOW on the whole card if this is the current game
    if data.placeId and data.placeId == currentPlaceId then
        stroke.Color = Color3.fromRGB(0, 255, 120)
        stroke.Thickness = 3.8
        stroke.Transparency = 0.2
        stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
        frame.BackgroundColor3 = Color3.fromRGB(30, 45, 35) -- slightly brighter green-tinted bg
    end

    local name = Instance.new("TextLabel")
    name.Size = UDim2.new(0.58, 0, 1, 0)
    name.Position = UDim2.new(0, 20, 0, 0)
    name.BackgroundTransparency = 1
    name.Text = data.name
    name.TextColor3 = Color3.fromRGB(235, 235, 255)
    name.TextSize = 20
    name.Font = Enum.Font.GothamSemibold
    name.TextXAlignment = Enum.TextXAlignment.Left
    name.Parent = frame

    local loadBtn = Instance.new("TextButton")
    loadBtn.Size = UDim2.new(0, 120, 0, 44)
    loadBtn.Position = UDim2.new(1, -138, 0.5, -22)
    loadBtn.BackgroundColor3 = Color3.fromRGB(0, 205, 255)
    loadBtn.Text = "Load"
    loadBtn.TextColor3 = Color3.fromRGB(10, 10, 25)
    loadBtn.TextSize = 16
    loadBtn.Font = Enum.Font.GothamBold
    loadBtn.TextXAlignment = Enum.TextXAlignment.Center
    loadBtn.Parent = frame
    Instance.new("UICorner", loadBtn).CornerRadius = UDim.new(0, 12)

    local padding = Instance.new("UIPadding")
    padding.PaddingLeft = UDim.new(0, 8)
    padding.PaddingRight = UDim.new(0, 8)
    padding.Parent = loadBtn

    -- Green indicator on button too (if current game)
    if data.placeId and data.placeId == currentPlaceId then
        local greenStrokeBtn = Instance.new("UIStroke")
        greenStrokeBtn.Color = Color3.fromRGB(0, 255, 120)
        greenStrokeBtn.Thickness = 3.5
        greenStrokeBtn.Parent = loadBtn

        loadBtn.Text = "Load"
        loadBtn.BackgroundColor3 = Color3.fromRGB(80, 255, 140)
    end

    -- Faster RGB cycling on Load buttons
    local btnGradient = Instance.new("UIGradient")
    btnGradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0.0,  Color3.fromRGB(0,   220, 255)),
        ColorSequenceKeypoint.new(0.25, Color3.fromRGB(0,   255, 160)),
        ColorSequenceKeypoint.new(0.5,  Color3.fromRGB(220, 100, 255)),
        ColorSequenceKeypoint.new(0.75, Color3.fromRGB(180, 255, 100)),
        ColorSequenceKeypoint.new(1.0,  Color3.fromRGB(0,   220, 255))
    })
    btnGradient.Offset = Vector2.new(0, 0)
    btnGradient.Parent = loadBtn

    spawn(function()
        local t = math.random() * 10
        while loadBtn and loadBtn.Parent do
            t = t + 0.028
            local phase = math.sin(t)
            local offset = phase * 0.4 + 0.15
            btnGradient.Offset = Vector2.new(offset, 0)
            task.wait(0.025)
        end
    end)

    loadBtn.MouseEnter:Connect(function()
        TweenService:Create(loadBtn, TweenInfo.new(0.25), {BackgroundColor3 = Color3.fromRGB(120, 255, 255)}):Play()
    end)

    loadBtn.MouseButton1Click:Connect(function()
        if setclipboard then
            setclipboard(data.link)

            local origText = loadBtn.Text
            loadBtn.Text = "Copied ‚úì"
            TweenService:Create(loadBtn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(100, 255, 140)}):Play()

            task.delay(1.4, function()
                if loadBtn and loadBtn.Parent then
                    TweenService:Create(loadBtn, TweenInfo.new(0.35), {BackgroundColor3 = Color3.fromRGB(0, 205, 255)}):Play()
                    task.delay(0.4, function()
                        if loadBtn and loadBtn.Parent then loadBtn.Text = origText end
                    end)
                end
            end)

            -- Casual, natural notification (no AI tone)
            Notify("Link copied!\nJust paste it in your browser real quick ‚Äî so it'll give you the script after the quick stuff.")
        else
            Notify("Clipboard not working here\nHere's the link tho: " .. data.link .. "\nPaste it in your browser")
        end
    end)
end

local function refreshGames(filter)
    filter = (filter or ""):lower()
    for _, child in scroll:GetChildren() do
        if child:IsA("Frame") then child:Destroy() end
    end
    for _, g in ipairs(games) do
        if filter == "" or g.name:lower():find(filter) then
            createGameButton(g)
        end
    end
    scroll.CanvasSize = UDim2.new(0,0,0, listLayout.AbsoluteContentSize.Y + 30)
end

searchBox:GetPropertyChangedSignal("Text"):Connect(function()
    refreshGames(searchBox.Text)
end)

refreshGames("")

