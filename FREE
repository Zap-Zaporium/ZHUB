titleLabel.Font = Enum.Font.GothamBlack
titleLabel.TextXAlignment = Enum.TextXAlignment.Left
titleLabel.Parent = titleBar

-- Slightly faster continuous RGB for ZAPORIUM title
local titleGradient = Instance.new("UIGradient")
titleGradient.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0.0,  Color3.fromRGB(0,   210, 255)),
    ColorSequenceKeypoint.new(0.25, Color3.fromRGB(0,   255, 145)),
    ColorSequenceKeypoint.new(0.5,  Color3.fromRGB(210, 255,  70)),
    ColorSequenceKeypoint.new(0.75, Color3.fromRGB(230,  70, 255)),
    ColorSequenceKeypoint.new(1.0,  Color3.fromRGB(0,   210, 255))
})
titleGradient.Offset = Vector2.new(0, 0)
titleGradient.Parent = titleLabel

spawn(function()
    local t = 0
    while true do
        t = t + 0.021
        local phase = math.sin(t)
        local offset = phase * 0.45 + 0.1
        titleGradient.Offset = Vector2.new(offset, 0)
        task.wait(0.032)
    end
end)

